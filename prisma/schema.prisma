generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model songs {
  id           String   @id @default(uuid())
  url_song     String
  image_song   String
  name_song    String
  created_data DateTime @default(now())
  updated_data DateTime @updatedAt
}

model books {
  id           String   @id @default(uuid())
  name_book    String
  image_book   String
  url_book     String
  image        String
  created_data DateTime @default(now())
  updated_data DateTime @updatedAt
}
